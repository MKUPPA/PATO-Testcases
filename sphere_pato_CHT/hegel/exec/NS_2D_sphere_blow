#SIMULATION_START_TIME = 0.d0
#SIMULATION_START_ITER = 0
SIMULATION_AXISYM = T               #Flag for axi-symmetric simulation

SIMULATION_GRAD_METH = GG

SIMULATION_RESTART_PATH = ../output
#SIMULATION_RESTART_FILE = restart_NS.dat
#SIMULATION_OVWRITE_CONV_FILE = T
#SIMULATION_WRITE_AT_RESTART  = T

#preCICE settings
SIMULATION_PRECICE_COUPLER = T
PRECICE_FILE_PATH          = /home/mkuppa/libraries/hegel_git/hegel_27_01_25_wPRECICE/runs/hegel_pato_CHT                     
PRECICE_CONFIG_FILE        = precice-config.xml                              # configuration file
PRECICE_DATA_FILE          = coupler.dat                                     # data file with information on quantities to be exchanged

#---------------------------
#Blunt body simulation settings: specify free-stream, wall properties 
#and initial boundary-layer (usee to generate initial and boundary data at run time)
SIMULATION_BLUNT_BODY = T
 
#Free-stream: Mach number, temperature and pressure 
BLUNT_BODY_MINF = 8.d0
BLUNT_BODY_TINF = 300.d0
BLUNT_BODY_PINF = 100.d0


#Wall temperature and blowing mass flux
BLUNT_BODY_TWALL = 500.d0
BLUNT_BODY_MWALL = 0.d0   

#Data for initialization with fake boundary-layer
BLUNT_BODY_GEN_BL   = T 
BLUNT_BODY_BL_THICK = 0.01d0 

#---------------------------
#Mesh 
#--------------------------
MESH_PATH      = ../input
MESH_NODE_FILE = grid_SPHERE.cgns
MESH_BOUND     = AXIS WALL OUTLET INLET    

## Parameters for mesh adaptation
#MESH_ADAPT                = F
#MESH_ADAPT_AT_RESTART     = T
#MESH_ADAPT_MAX            = 1
#MESH_ADAPT_RATE           = 2000
#MESH_ADAPT_RE_WALL        = 1.d0
