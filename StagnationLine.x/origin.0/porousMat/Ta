FoamFile {
  version     2.0;
  format      ascii;
  class       volScalarField;
  location    "0";
  object      Ta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 247;

boundaryField {
  top
  {
    type             Bprime;
    mixtureMutationBprime tacot26;
    environmentDirectory "$PATO_DIR/data/Environments/RawData/Earth";
    movingMesh yes;
    mappingType constant;
    mappingFileName "constant/porousMat/BoundaryConditions";
    mappingFields
    (
        (p "1")
        (rhoeUeCH "2")
        (h_r "3")
    );
    qRad 0;
    chemistryOn 1;
    lambda 0.5;
    Tbackground 247; // Temp for reradiation, same as freestream=sample
    Tedge 247; // For convective heating with chem off, not used with chem on
    hconv 0;
    value uniform 247; //same as sample temperature
  }
  sides
  {
    type            zeroGradient;
  }
  bottom
  {
    type            zeroGradient;
  }
}


